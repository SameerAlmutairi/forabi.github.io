main.blog-view(infinite-scroll='load()', can-load='canLoad()', threshold='100')
    div(ng-repeat='posts in pages')
        a.post(ng-href=link + '/#!/{{ post.url }}', ng-repeat='post in posts', class='{{ post.type }}')
            h1.title {{ post.title }}
            .media-container: img(ng-if='post.image', ng-src='{{ post.image }}')
            p.excerpt {{ post.description }}
            .button-group
                //- a(href='/#/{{ post.url }}') تابع القراءة...
                button: i.icon-star
                small.date {{ post.date | date }}