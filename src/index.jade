doctype html
html(ng-app='blog', lang=language, manifest=manifest, dir=dir)
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
        title(ng-bind='title')=title
        
        if rss
            link(rel='alternate', type='application/rss+xml', title='RSS', href=rss)
        
        for style in styles
            link(rel='stylesheet', href=style)
        for icon in icons
            link(rel='icon', href='icons/icon-' + icon + '.png', sizes= icon + 'x' + icon)
    body
        include _header

        div(ng-hide='state != "loading"'): include _spinner
        div(ng-if='state == "error"', ng-include='"views/error.html"')
        
        ng-view(ng-hide='state != "ready"')

        footer

        for script in scripts
            script(src=script)